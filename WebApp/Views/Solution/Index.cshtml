@model IEnumerable<BusinessLayer.DTO.TestPatternDTO>

@{
	ViewBag.Title = "All Tests";
}

<h2>Choose Test</h2>

<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.Name)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.NumberOfQuestions)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Area)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Start)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.End)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Time)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.StudentGroup)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Teacher)
		</th>
		<th>Actions</th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Name)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.NumberOfQuestions)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Area.Name)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Start)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.End)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Time)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.StudentGroup)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Teacher)
			</td>
			<td>
				@Html.ActionLink("Start Solving", "Create", new { id = item.Id })
			</td>
		</tr>
	}

</table>

<div style="color: indianred;">
	@Html.Raw((String)ViewBag.Warning)
</div>
